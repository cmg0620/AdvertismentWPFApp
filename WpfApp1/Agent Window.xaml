                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,30">
                                            <TextBlock Text="Заработано: " Foreground="White" FontSize="46"></TextBlock>
                                            <TextBlock Text="200000" Foreground="#FFFAFF00" FontSize="46"></TextBlock>
                                        </StackPanel>
                                        <TextBlock Text="Сделок:" Foreground="White"/>
                                        <TextBlock Text="10" Foreground="#FFFAFF00"/>
